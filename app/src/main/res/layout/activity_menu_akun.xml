<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuAkun">

    <ImageView
        android:id="@+id/blue_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_frame"
        android:padding="83dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/foto_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="155dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="74dp"
        android:background="@drawable/foto_frame"
        android:padding="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/blue_frame"
        app:layout_constraintEnd_toEndOf="@+id/blue_frame"
        app:layout_constraintStart_toStartOf="@+id/blue_frame"
        app:layout_constraintTop_toTopOf="@+id/blue_frame" />

    <ImageView
        android:id="@+id/frame_akun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/foto_akun"
        app:layout_constraintBottom_toBottomOf="@+id/foto_frame"
        app:layout_constraintEnd_toEndOf="@+id/foto_frame"
        app:layout_constraintStart_toStartOf="@+id/foto_frame"
        app:layout_constraintTop_toTopOf="@+id/foto_frame" />

    <ImageView
        android:id="@+id/hamburger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="344dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="93dp"
        android:background="@drawable/tiga_garis"
        app:layout_constraintBottom_toBottomOf="@+id/blue_frame"
        app:layout_constraintEnd_toEndOf="@+id/blue_frame"
        app:layout_constraintStart_toEndOf="@+id/blue_frame"
        app:layout_constraintStart_toStartOf="@+id/blue_frame"
        app:layout_constraintTop_toTopOf="@+id/blue_frame" />

    <TextView
        android:id="@+id/textAkun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="113dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="21dp"
        android:text="Hi, Human"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/blue_frame"
        app:layout_constraintEnd_toEndOf="@+id/blue_frame"
        app:layout_constraintStart_toStartOf="@+id/blue_frame"
        app:layout_constraintTop_toTopOf="@+id/blue_frame" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.119"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blue_frame"
        app:layout_constraintVertical_bias="0.065" />

    <TextView
        android:id="@+id/name_field"
        android:layout_width="324dp"
        android:layout_height="36dp"
        android:background="@drawable/field_text"
        android:text=" Human"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blue_frame"
        app:layout_constraintVertical_bias="0.151" />

    <TextView
        android:id="@+id/birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Birth:"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.115"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blue_frame"
        app:layout_constraintVertical_bias="0.236" />

    <TextView
        android:id="@+id/birth_field"
        android:layout_width="324dp"
        android:layout_height="36dp"
        android:background="@drawable/field_text"
        android:text=" 30 February 2022"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blue_frame"
        app:layout_constraintVertical_bias="0.317" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender:"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.124"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blue_frame"
        app:layout_constraintVertical_bias="0.403" />

    <TextView
        android:id="@+id/gender_field1"
        android:layout_width="90dp"
        android:layout_height="36dp"
        android:background="@drawable/field_text_blue"
        android:text="   Male"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.127"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blue_frame"
        app:layout_constraintVertical_bias="0.499" />

    <TextView
        android:id="@+id/gender_field2"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:background="@drawable/field_text"
        android:text=" Female "
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blue_frame"
        app:layout_constraintVertical_bias="0.499" />

    <TextView
        android:id="@+id/gender_field3"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:background="@drawable/field_text"
        android:text=" Other "
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.765"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blue_frame"
        app:layout_constraintVertical_bias="0.499" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.118"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blue_frame"
        app:layout_constraintVertical_bias="0.606" />

    <TextView
        android:id="@+id/email_field"
        android:layout_width="324dp"
        android:layout_height="36dp"
        android:background="@drawable/field_text"
        android:text=" Human@gmail.com "
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blue_frame"
        app:layout_constraintVertical_bias="0.697" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="341dp"
        android:layout_height="38dp"
        android:background="@drawable/button_blue"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blue_frame"
        app:layout_constraintVertical_bias="0.889" />
</androidx.constraintlayout.widget.ConstraintLayout>